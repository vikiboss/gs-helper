{
  "name": "gs-helper",
  "productName": "GenshinHelper",
  "packageManager": "pnpm@8.2.0",
  "private": true,
  "version": "1.2.4",
  "description": "原神 PC 端小工具，支持原神签到、祈愿分析、查看便签状态和游戏详细数据等。基于 Electron 和 React。",
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "dev": "esno scripts/devServer.mts",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./src/preload && vite build",
    "build:renderer": "cd ./src/renderer && vite build",
    "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir",
    "test": "npm run test:main && npm run test:preload",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r src/preload --passWithNoTests",
    "lint": "eslint . --ext js,mjs,cjs,ts,mts,cts --fix && npm run format",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron version/setup-electron-version.mjs",
    "format": "npx prettier --write \"**/*.{js,mjs,cjs,ts,tsx,jsx,mts,cts,json}\""
  },
  "repository": "vikiboss/gs-helper",
  "homepage": "https://github.com/vikiboss/gs-helper#readme",
  "author": "Viki <hi@viki.moe> (https://github.com/vikiboss)",
  "license": "GPL-3.0",
  "devDependencies": {
    "@nivo/bar": "^0.80.0",
    "@nivo/calendar": "^0.80.0",
    "@nivo/core": "^0.80.0",
    "@nivo/pie": "^0.80.0",
    "@nivo/tooltip": "0.80.0",
    "@types/dom-to-image": "^2.6.4",
    "@types/fs-extra": "^9.0.13",
    "@types/json-bigint": "^1.0.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.35",
    "@types/react-dom": "^18.0.11",
    "@types/uuid": "^8.3.4",
    "@vmoe/eslint-config": "^0.3.1",
    "@vmoe/prettier-config": "^1.0.0",
    "autoprefixer": "^10.4.14",
    "axios": "^1.3.5",
    "classnames": "^2.3.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.7",
    "dom-to-image": "^2.6.0",
    "electron": "^24.1.1",
    "electron-builder": "^23.6.0",
    "electron-store": "^8.1.0",
    "eslint": "^8.38.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "json-bigint": "^1.0.0",
    "less": "^4.1.3",
    "postcss": "^8.4.21",
    "prettier": "^2.8.7",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.10.0",
    "tailwindcss": "^3.3.1",
    "typescript": "^5.0.4",
    "unplugin-auto-expose": "^0.0.4",
    "uuid": "^8.3.2",
    "vite": "^4.2.1",
    "vitest": "^0.30.1"
  },
  "dependencies": {
    "electron-updater": "^5.3.0",
    "react": "^18.2.0"
  }
}
